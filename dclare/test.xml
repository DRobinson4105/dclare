<project name="test.dclare" default="test.results.jar.dclare">
  <path id="classpath.test.dclare">
    <path>
      <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
      <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
      <pathelement location="${path.variable.maven_repository}/org/modelingvalue/immutable-collections/1.0.8/immutable-collections-1.0.8.jar"/>
    </path>
    <dirset dir="out/production">
      <include name="*"/>
    </dirset>
    <dirset dir="out/test">
      <include name="*"/>
    </dirset>
  </path>
  <target name="test.dclare">
    <junit haltonfailure="on" logfailedtests="on" fork="on" forkmode="once">
      <!-- fork="on" forkmode="perTest" threads="8" -->
      <classpath refid="classpath.test.dclare"/>
      <batchtest todir=".">
        <fileset dir="out/test/dclare">
          <include name="**/*Test.*"/>
          <include name="**/*Tests.*"/>
        </fileset>
        <formatter type="xml"/>
      </batchtest>
    </junit>
  </target>
  <target name="test.results.jar.dclare" depends="test.dclare">
    <mkdir dir="${basedir}/out/artifacts"/>
    <jar destfile="${basedir}/out/artifacts/dclare-testresults.jar" filesetmanifest="skip">
      <zipfileset file="${basedir}/TEST-*.xml"/>
    </jar>
  </target>
</project>
